{% trans_default_domain('FOSUserBundle') %}

{% extends "AppBundle::layout.html.twig" %}

{% block title %}Connexion{% endblock %}

{% block content %}
    <div class="background-image background-desktop"></div>
    <div class="container">
        <div class="container-fluid">
            <div class="row">
                {% include('AppBundle::flash-message.html.twig') %}
                <div class="col-md-6 col-md-offset-3">
                    <h1 class="text-center">Connexion</h1>
                    <div class="box box-login center-block">
                        <div class="box-body">
                            {% if error %}
                                <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            <form action="{{ path("fos_user_security_check") }}" method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'form.username'|trans }}" />
                                </div>

                                <div class="form-group">
                                    <input type="password" class="form-control" id="password" name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}" />
                                </div>

                                <div class="form-switch">
                                    <label class="switch">
                                        <input type="checkbox" id="remember_me" name="_remember_me" checked="checked" />
                                        <div class="slider round"></div>
                                    </label>
                                    <label for="remember_me" class="form-switch-label">{{ 'security.login.remember_me'|trans }}</label>
                                </div>

                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                <button type="submit" class="btn btn-red">{{ 'security.login.submit'|trans }}</button>
                            </form>
                        </div>
                        <div class="box-footer">
                            <a href="{{ path("fos_user_resetting_request") }}">{{ 'security.login.forgotten_password'|trans }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
