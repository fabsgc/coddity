{% trans_default_domain('FOSUserBundle') %}

{% extends "AppBundle::layout.html.twig" %}

{% block title %}Récupérer mon mot de passe{% endblock %}

{% block content %}
    <div class="background-image background-desktop"></div>
    <div class="container">
        <div class="container-fluid">
            <div class="row">
                {% include('AppBundle::flash-message.html.twig') %}
                <div class="col-md-6 col-md-offset-3">
                    <h1 class="text-center">Récupérer mon mot de passe</h1>
                    <div class="box box-login center-block">
                        <div class="box-body">
                            {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
                            <div class="form-group">
                                {{ form_widget(form.plainPassword.first, { 'label' : false, 'attr': {'placeholder': 'Nouveau mot de passe'} }) }}
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.plainPassword.second, { 'label' : false, 'attr': {'placeholder': 'Confirmation du nouveau mot de passe'} }) }}
                            </div>
                            <div>
                                <input type="submit" value="{{ 'resetting.reset.submit'|trans }}"  class="btn btn-red"/>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}