<div class="tab-panel">
    {% if is_granted('ROLE_PROFESSIONAL') %}
        <a href="{{ path('profile_edit_general') }}" class="width-30 tab-profile {% if app.request.attributes.get('_route') == 'profile_edit_general' %}active{% endif %}">Profil</a>
        <a href="{{ path('profile_edit_parameters') }}" class="width-30 tab-parameters {% if app.request.attributes.get('_route') == 'profile_edit_parameters' %}active{% endif %}">Paramètres</a>
        <a href="{{ path('profile_edit_preferences') }}" class="width-30 tab-preferences {% if app.request.attributes.get('_route') == 'profile_edit_preferences' %}active{% endif %}">Préférences</a>
    {% else %}
        <a href="{{ path('profile_edit_general') }}" class="width-50 tab-profile {% if app.request.attributes.get('_route') == 'profile_edit_general' %}active{% endif %}">Profil</a>
        <a href="{{ path('profile_edit_parameters') }}" class="width-50 tab-parameters {% if app.request.attributes.get('_route') == 'profile_edit_parameters' %}active{% endif %}">Paramètres</a>
    {% endif %}
</div>