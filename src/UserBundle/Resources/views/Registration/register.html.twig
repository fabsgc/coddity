{% trans_default_domain('FOSUserBundle') %}

{% extends "AppBundle::layout.html.twig" %}

{% block title %}{{ 'layout.register'|trans }}{% endblock %}

{% block content %}
    <div class="background-image background-desktop"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-login center-block">
                    <div class="box-heading">
                        <div class="box-title"><i class="fa fa-user"></i> {{ 'layout.register'|trans }}</div>
                        <div class="btn-group pull-right">
                            <a href="{{ path("fos_user_security_login") }}">{{ 'layout.login'|trans }}</a>
                        </div>
                    </div>
                    <div class="box-body">
                        {% if error is defined %}
                            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <form action="{{ path("fos_user_registration_register") }}" method="post">
                            <div class="form-group">
                                <label for="username">{{ 'form.email'|trans }}</label>
                                <input type="email" class="form-control" id="username" name="_username" required="required" placeholder="{{ 'form.email'|trans }}" />
                            </div>

                            <div class="form-group">
                                <label for="password">{{ 'form.password'|trans }}</label>
                                <input type="password" class="form-control" id="password" name="_password" required="required" placeholder="{{ 'form.password'|trans }}" />
                            </div>

                            <div class="form-group">
                                <label for="password-confirmation">{{ 'form.password_confirmation'|trans }}</label>
                                <input type="password" class="form-control" id="password-confirmation" name="_password_confirmation" required="required" placeholder="{{ 'form.password'|trans }}" />
                            </div>

                            <button type="submit" class="btn btn-red">{{ 'registration.submit'|trans }}</button>
                        </form>
                    </div>
                    <div class="box-footer">
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}